@page
@model MainlineUK.Pages.AboutUsModel
@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <div class="row Spacer">
        <div class="col-md-3 col-sm-6 VideoBanner">
            <video autoplay>
                <source src="~/media/SimonFinance.mp4" />
                Your browser does not support the video tag.
            </video>
        </div>
        <div class="col-md-9 col-sm-6">
            <h2>35 Years of Experience in a Family Run Dealership</h2>
            <h3>Working hard to get a car and finance deal to suit you</h3>
            <hr class="Divider" />
