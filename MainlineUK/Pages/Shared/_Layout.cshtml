<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MainlineUK</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css"
              integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/font-awesome/css/all.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link href="https://fonts.googleapis.com/css?family=Exo+2:400,700" rel="stylesheet">

</head>
<body>
    <div class="container-fluid sticky-top" id="TopNavBar">
        <div id="SiteHeader">
            <div class="SiteLogo">
                <img src="~/images/MainlineUKLogo.png" alt="Mainline UK Logo" class="img-fluid" />
            </div>
            <div class="SiteNav">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md ContactDetails Tel">
                            <a href="tel:0191 4605070"><i class="fas fa-phone"></i> 0191 4605070</a>
                        </div>
                        <div class="col-md ContactDetails Email">
                            <a href="sales@mainlineuk.com?subject=Website Enquiry"><i class="fas fa-envelope ContactDetails"></i> sales@mainlineuk.com</a>
                            <a href="https://twitter.com/mainlineuksales" target="_blank"><i class="fab fa-twitter"></i></a>
                            <a href="https://www.facebook.com/mainlinecarsales" target="_blank"><i class="fab fa-facebook"></i></a>
                        </div>
                    </div>
                    <div class="row" id="TopNavbarNav">
                        <nav class="navbar navbar-expand-lg navbar-dark col">
                            <a class="navbar-brand" asp-page="/Index"></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Recent">Recent Stock</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/LowMileage">Low Mileage</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/RecentPlates">Recent Plates</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/LowPrice">Lowest Price</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Contact">Contact</a>
                                    </li>
                                </ul>
                                @*<partial name="_LoginPartial" />*@
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_CookieConsentPartial" />

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - MainlineUK</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/popper.js/popper.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/popper.min.js"
                asp-fallback-src="~/lib/popper/popper.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/twitter-bootstrap/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>


    @RenderSection("Scripts", required: false)
</body>
</html>
