@page
@model MainlineUK.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=1456475744597358&autoLogAppEvents=1';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<partial name="_FiltersPartial" model="Model" />

<div class="container Spacer">
    <div class="row">
        <div class="col-lg-8 align-self-end">
            <div class="row">
                <div class="col">
                    <h2>Car Dealership Near Newcastle Upon Tyne Near Metro Centre Retail Park off the A1</h2>
                    <p>
                        We have 35 years experience dealing in quality used cars with a personal & professional service from a family owned and run dealership. We are based beside the Metro Centre just off the A1 in Gateshead, close to Newcastle upon Tyne.
                    </p>
                    <p>
                        We pride ourselves on the great service we provide to all of our customers and 95% of our customers would highly recommend us.
                    </p>
                    <p>
                        Been turned down for finance? We can help with finance options tailored to suit your needs. Browse our stock and see what your monthly payments would be.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col VideoBanner">
                    <video controls>
                        <source src="~/media/Mainline.mp4" />
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>
        <div class="col-lg-4 text-center fb-container">
            <div class="fb-page" data-href="https://www.facebook.com/mainlinecarsales/" data-tabs="timeline" data-small-header="false"
                 data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                <blockquote cite="https://www.facebook.com/mainlinecarsales/" class="fb-xfbml-parse-ignore">
                    <a href="https://www.facebook.com/mainlinecarsales/" target="_blank" rel="noopener">Mainline Car Sales</a>
                </blockquote>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <hr class="Divider" />
</div>

<div class="container">
    <div class="row Spacer SpacerBottom">
        <div class="col-md col-sm-8 col-12">
            <h2>Our Latest Cars</h2>
        </div>
        <div class="col-md-1 col-sm-2 col-6 align-self-end">
            <button type="button" class="btn btn-primary btn-block LatestCarControls" aria-label="R"><i class="fas fa-arrow-circle-left"></i></button>
        </div>
        <div class="col-md-1 col-sm-2 col-6 align-self-end">
            <button type="button" class="btn btn-primary btn-block LatestCarControls" aria-label="F"><i class="fas fa-arrow-circle-right"></i></button>
        </div>
    </div>
    <div class="row" id="LatestVehicleArea">
        <div class="col text-center LoadingArea">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>

<div class="container">
    <hr class="Divider" />
</div>

