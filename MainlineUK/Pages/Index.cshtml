@page
@model MainlineUK.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
}

<partial name="_FiltersPartial" model="Model" />

<div class="container">
    <div class="row Spacer">
        <div class="col-md-4">
            <p>
                Welcome to Mainline UK based in Gateshead. We are convieniently placed next to the A1 near the Metro Centre.
            </p>
            <p>
                We are a family owned business offering a friendly and personal service with a range of vehicles and financing deals to suit any budget. Check out our 5 star reviews on Autotrader!
            </p>
            <p>
                Follow us on Twitter for the latest news and to hear about our latest vehicles and special offers - twitter.com/MainlineUKSales.
            </p>
        </div>
        <div class="col-md-8 VideoBanner">
            <video autoplay>
                <source src="~/media/Mainline.mp4" />
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>

<div class="container">
    <hr class="Divider" />
</div>

<div class="container">
    <div class="row Spacer SpacerBottom">
        <div class="col-md">
            <h2>Our Latest Cars</h2>
        </div>
        <div class="col-md-1 align-self-end">
            <button type="button" class="btn btn-primary btn-block LatestCarControls" aria-label="R">&lt;</button>
        </div>
        <div class="col-md-1 align-self-end">
            <button type="button" class="btn btn-primary btn-block LatestCarControls" aria-label="F">&gt;</button>
        </div>
    </div>
    <div class="row" id="LatestVehicleArea">
        <div class="col text-center LoadingArea">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>

<div class="container">
    <hr class="Divider" />
</div>

<div class="container">
    <div class="row Spacer">
        <div class="col-md">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2290.9646121757805!2d-1.6589204!3d54.9561813!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487e77644357ee33%3A0xf625553c4b88a81c!2sMainlineUK!5e0!3m2!1sen!2suk!4v1545966208333" class="HomeMap" allowfullscreen></iframe>
        </div>
        <div class="col-md">
            <h2>Contact Us</h2>
            <div class="row">
                <div class="col-md">
                    <h3>Address</h3>
                    <p>
                        Metrocentre Autoworld<br />
                        Wellington Road<br />
                        Dunston<br />
                        Tyne And Wear<br />
                        NE11 9HU
                    </p>

                    <h3>Tel</h3>
                    <p>
                        0191 4605070
                    </p>

                    <h3>Email</h3>
                    <p>
                        sales@mainlineuk.com
                    </p>
                </div>
                <div class="col-md">
                    <h3>Opening Times</h3>
                    <div class="row">
                        <div class="col-5">
                            Monday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Tuesday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Wednesday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Thursday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Friday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Saturday
                        </div>
                        <div class="col-7">
                            9am–5:30pm
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            Sunday
                        </div>
                        <div class="col-7">
                            11am–4pm
                        </div>
                    </div>

                    <p class="Spacer">
                        Viewings available 7 days a week by appointment only.
                    </p>

                    <h3>Find Directions</h3>
                    <p>
                        <input type="text" placeholder="Enter Postcode" />
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <hr class="Divider" />
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/home.js" asp-append-version="true"></script>
        <script src="~/js/stocklistshared.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home.min.js" asp-append-version="true"></script>
        <script src="~/js/stocklistshared.min.js" asp-append-version="true"></script>
    </environment>
}