@page
@model MainlineUK.Pages.FinanceModel
@{
    ViewData["Title"] = "Finance";
}

<div class="container FinanceSection">
    <div class="row Spacer">
        <div class="col-md">
            <h2>
                Easy Car Finance
            </h2>
            <h3>
                Good, poor or bad credit, we can help
            </h3>
            <hr class="Divider" />
            <p>
                Mainline UK are your local vehicle finance specialists. We are able to compare the best deals from all major lenders in minutes. We also have access to Specialist lenders meaning we can find finance whatever your circumstances. Good, poor or bad credit, we can help.
            </p>
            <p>
                You can check your eligibility at anytime with our online Car Finance Checker Tool ...its FREE and simple and does not effect you credit score!
            </p>
            <p>
                You can apply online Zero Deposit NOW!<br />
                We are available to advise at any point.....we are here to help and always only a phone call away.
            </p>

            <p>
                &nbsp;
            </p>

            <p>
                Please use the form below to contact one of the team who will be happy to help.
            </p>
        </div>
        <div class="col-md">
            <img src="~/images/EasyCarFinance.jpg" alt="Easy Car Finance" class="img-fluid" />
        </div>
    </div>
    <hr class="Divider" />

    @if (@Model.FormSubmitted != true)
    {
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg">
                    <h3>Your Contact Details</h3>

                    <div class="form-group row">
                        <label asp-for="Contact.Name" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Name" class="form-control" />
                            <span asp-validation-for="Contact.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Email" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Email" class="form-control" />
                            <span asp-validation-for="Contact.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Telephone" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Telephone" class="form-control" />
                            <span asp-validation-for="Contact.Telephone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg">
                    <h3>Your Enquiry</h3>

                    <div class="form-group row">
                        <label asp-for="Contact.Enquiry" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <textarea asp-for="Contact.Enquiry" class="form-control"></textarea>
                            <span asp-validation-for="Contact.Enquiry" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md d-md-block d-sm-none">

                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-block">Send Enquiry</button>
                </div>
                <div class="col-md d-md-block d-sm-none">

                </div>
            </div>

            <hr class="Divider" />
        </form>

    }
    else
    {
        if (@Model.EmailSent == true)
        {
            <div class="row Spacer">
                <div class="col-md text-center">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Thank you!</h4>
                        <p>
                            Thank you for your message.
                        </p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row Spacer">
                <div class="col-md text-center">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Sorry there was a problem...</h4>
                        <p>
                            Thank you for your message but unfortunately there was an error and your message could not be sent.
                        </p>
                        <p>
                            Please try to send your message again and if the error persists please <a href="enquiries@mainlineuk.co.uk?subject=Finance Enquiry (Error 01)">click here</a> to send an email using your computer email programme instead or send an email to <a href="enquiries@mainlineuk.co.uk?subject=Finance Page Enquiry (Error 01)">enquiries@mainlineuk.co.uk</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}